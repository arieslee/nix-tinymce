{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "target": "es5",
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.tsx",
    "node_modules"
  ]
}